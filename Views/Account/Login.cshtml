@model TasarimWeb.Models.LoginViewModel
@{
    Layout = null;
}
<!doctype html>
<html lang="tr">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Giriş · Orhan Karakoç Tekstil</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;700&family=Manrope:wght@400;600&display=swap');
    :root {
      --bg:#050817;
      --panel:rgba(7,13,28,.8);
      --panel-strong:rgba(15,23,42,.9);
      --glass:#0f172ab3;
      --accent:#22d3ee;
      --accent-strong:#0ea5e9;
      --warning:#f97316;
      --danger:#fb7185;
      --text:#f8fafc;
      --muted:#94a3b8;
      --border:rgba(148,163,184,.25);
    }
    * { box-sizing:border-box; }
    body {
      margin:0;
      min-height:100vh;
      font-family:'Space Grotesk', 'Manrope', sans-serif;
      background:radial-gradient(circle at 20% 20%, rgba(34,211,238,.18), transparent 45%),
                 radial-gradient(circle at 80% 0%, rgba(14,165,233,.22), transparent 60%),
                 var(--bg);
      color:var(--text);
      display:flex;
      justify-content:center;
      align-items:center;
      padding:32px;
      overflow:hidden;
    }
    body::before,
    body::after {
      content:'';
      position:fixed;
      inset:auto;
      width:520px;
      height:520px;
      border-radius:50%;
      background:radial-gradient(circle, rgba(14,165,233,.35), transparent 70%);
      filter:blur(18px);
      opacity:.6;
      pointer-events:none;
      z-index:0;
    }
    body::before { top:-160px; right:-120px; }
    body::after { bottom:-160px; left:-120px; background:radial-gradient(circle, rgba(236,72,153,.35), transparent 70%); }
    .scene {
      position:relative;
      width:min(520px, 100%);
      display:flex;
      flex-direction:column;
      gap:0;
      backdrop-filter:blur(2px);
      z-index:1;
    }
    .auth-panel {
      flex:0 0 420px;
      background:var(--panel-strong);
      border-radius:28px;
      padding:36px;
      border:1px solid var(--border);
      box-shadow:0 40px 120px rgba(2,6,23,.65);
      display:flex;
      flex-direction:column;
      gap:24px;
    }
    .panel-head {
      display:flex;
      align-items:center;
      gap:16px;
    }
    .panel-head img {
      width:72px;
      height:72px;
      object-fit:contain;
      border-radius:18px;
      padding:10px;
      background:rgba(15,23,42,.8);
      border:1px solid rgba(255,255,255,.08);
    }
    .panel-head h2 {
      margin:0;
      font-size:1.5rem;
      letter-spacing:.05em;
    }
    form { display:flex; flex-direction:column; gap:18px; }
    .field-group { display:flex; flex-direction:column; gap:8px; }
    label { font-size:.9rem; color:var(--muted); letter-spacing:.04em; }
    input[type="text"], input[type="password"] {
      width:100%;
      border-radius:14px;
      border:1px solid rgba(148,163,184,.35);
      padding:14px 16px;
      font-size:1rem;
      background:rgba(2,6,23,.55);
      color:var(--text);
      transition:border .2s ease, box-shadow .2s ease, background .2s ease;
    }
    input:focus {
      outline:none;
      border-color:var(--accent);
      box-shadow:0 0 0 2px rgba(34,211,238,.25);
      background:rgba(2,6,23,.85);
    }
    .remember {
      display:flex;
      align-items:center;
      gap:10px;
      font-size:.9rem;
      color:var(--muted);
    }
    .remember input { width:auto; }
    .cta {
      width:100%;
      border:none;
      border-radius:16px;
      padding:16px;
      font-size:1rem;
      font-weight:600;
      letter-spacing:.08em;
      text-transform:uppercase;
      color:#04101f;
      background:linear-gradient(120deg, var(--accent), var(--accent-strong));
      cursor:pointer;
      box-shadow:0 20px 50px rgba(14,165,233,.35);
      transition:transform .2s ease, box-shadow .2s ease;
    }
    .cta:hover { transform:translateY(-3px); box-shadow:0 24px 60px rgba(14,165,233,.45); }
    .cta:active { transform:translateY(0); }
    .validation-summary-errors {
      border-radius:16px;
      border:1px solid rgba(251,113,133,.4);
      background:rgba(251,113,133,.08);
      color:var(--danger);
      padding:12px 16px;
      font-size:.9rem;
      line-height:1.4;
    }
    .validation-summary-valid { display:none; }
    .text-danger { color:var(--danger); font-size:.85rem; }
    .panel-meta {
      display:flex;
      justify-content:space-between;
      font-size:.85rem;
      color:var(--muted);
    }
    @@media (max-width: 1024px) {
      .auth-panel { flex:auto; }
    }
    @@media (max-width: 640px) {
      body { padding:16px; }
      .auth-hero, .auth-panel { padding:24px; }
      .hero-body h1 { font-size:1.9rem; }
    }
  </style>
</head>
<body>
  <div class="scene">
    <section class="auth-panel">
      <header class="panel-head">
        <img src="@Url.Content("~/img/orhan-logo.png")" alt="Orhan Karakoç" />
        <div>
          <h2>ORHAN KARAKOÇ TEKSTİL</h2>
          <p style="margin:4px 0 0; color:var(--muted);">Arşive erişmek için bilgilerinizi doğrulayın.</p>
        </div>
      </header>
      <form method="post" asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Model.ReturnUrl">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
        <div class="field-group">
          <label asp-for="UserName"></label>
          <input asp-for="UserName" autocomplete="username" placeholder="Kullanıcı adınızı girin" />
          <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="field-group">
          <label asp-for="Password"></label>
          <input asp-for="Password" autocomplete="current-password" placeholder="••••••••" />
          <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <label class="remember">
          <input asp-for="RememberMe" />
          <span>@Html.DisplayNameFor(m => m.RememberMe)</span>
        </label>
        <button type="submit" class="cta">Giriş Yap</button>
      </form>
    </section>
  </div>
</body>
</html>
